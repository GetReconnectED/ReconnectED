<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#DEFFFFFF"
  android:clickable="true"
  android:focusable="true"
>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/block_overlay_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
  >
    <ImageView
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:contentDescription="@string/lock_icon"
      android:src="@drawable/ic_lock_large"
      app:tint="#FFFFFF"
    />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:fontFamily="@font/interdisplay_bold"
      android:text="@string/times_up"
      android:textColor="#FFFFFF"
      android:textSize="32sp"
    />
    <TextView
      android:id="@+id/blockedAppName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/interdisplay_semibold"
      android:text="App Name"
      android:textColor="#FFFFFFCC"
      android:textSize="24sp"
    />
    <TextView
      android:id="@+id/limitText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:fontFamily="@font/interdisplay_regular"
      android:gravity="center"
      android:text="You've reached your limit for today"
      android:textColor="#FFFFFFAA"
      android:textSize="16sp"
    />
    <Button
      android:id="@+id/goHomeButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:backgroundTint="#FFFFFF"
      android:fontFamily="@font/interdisplay_semibold"
      android:paddingHorizontal="32dp"
      android:paddingVertical="12dp"
      android:text="@string/go_to_home_screen"
      android:textColor="#EF4444"
      android:textSize="16sp"
    />
  </LinearLayout>
</FrameLayout>
